<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <data>

        <variable
            name="classInfo"
            type="hahow.recruit.hahowdondon.data.ClassInfo" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/itemImageCardView"
            android:layout_width="150dp"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:backgroundTint="@color/gray_646464"
            app:cardCornerRadius="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="16:9"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    app:imageUrl="@{classInfo.coverImageUrl}" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/autoTrack"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:text="@string/statusIncubating"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    app:backgroundTint="@color/gray_f0f0f0"
                    app:cornerRadius="6dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/itemTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="10dp"
            android:ellipsize="end"
            android:fontFamily="@font/noto_sans"
            android:letterSpacing="0.1"
            android:maxLines="2"
            android:text="@{classInfo.title}"
            android:textColor="@color/gray_646464"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/itemImageCardView"
            app:layout_constraintTop_toTopOf="@+id/itemImageCardView"
            tools:text="@string/classInfoTitle" />

        <TextView
            android:id="@+id/reachSuccessCriteria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:fontFamily="@font/noto_sans"
            android:letterSpacing="0.1"
            android:text="@{@string/reachSuccessCriteria(250)}"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:visibility="gone"
            app:layout_constraintStart_toEndOf="@+id/itemImageCardView"
            app:layout_constraintTop_toBottomOf="@+id/itemTitle"
            tools:text="@string/ReachSuccessCriteriaTools" />

        <TextView
            android:id="@+id/unReachSuccessCriteria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:fontFamily="@font/noto_sans"
            android:letterSpacing="0.1"
            android:text="@{@string/unReachSuccessCriteria(6,30)}"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:visibility="visible"
            app:layout_constraintStart_toEndOf="@+id/itemImageCardView"
            app:layout_constraintTop_toBottomOf="@+id/itemTitle"
            tools:text="@string/unReachSuccessCriteriaTools"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>